{
  "id": "system-driver",
  "name": "SystemDriver",
  "description": "Enhanced system driver with UI automation capabilities for desktop interaction",
  "version": "2.0.0",
  "author": "Runix Team",
  "license": "MIT",
  "executable": "SystemDriver.exe",
  "protocol": "websocket",
  "transport": "websocket",
  "features": [
    "execute",
    "introspection",
    "health-check",
    "ui-automation",
    "screen-capture",
    "mouse-control",
    "keyboard-control"
  ],
  "actions": [
    "createFile",
    "readFile",
    "writeFile",
    "deleteFile",
    "executeCommand",
    "startProcess",
    "killProcess",
    "listProcesses",
    "takeScreenshot",
    "clickAt",
    "doubleClickAt",
    "rightClickAt",
    "typeText",
    "pressKey",
    "moveMouse",
    "drag",
    "scroll",
    "getMousePosition",
    "getScreenSize",
    "captureRegion",
    "findColorAt",
    "waitForColor"
  ],
  "dependencies": {
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.12.7"
  },
  "config": {
    "workingDirectory": ".",
    "allowedPaths": ["."],
    "timeout": 30000,
    "screenshotDir": "./screenshots",
    "uiAutomation": {
      "mouseMoveDelay": 100,
      "clickDelay": 50,
      "typeDelay": 10,
      "doubleClickSpeed": 300
    }
  }
}
